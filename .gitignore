# Root .gitignore for QCM-Net

# Node
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log

# Build outputs
/frontend/build/
/frontend/dist/
/frontend/.env.local

# Frontend environment and caches
/frontend/.env
/frontend/.env.*
/frontend/.env.*.local
/frontend/node_modules/
/frontend/coverage/
/frontend/.parcel-cache/
/frontend/.cache/


# Laravel / PHP
/backend/vendor/
/backend/.env
/backend/.env.*.local
/backend/.phpunit.result.cache
/backend/.idea/

# Laravel storage and cache (subfolders already have their own .gitignore but keep here too)
/backend/storage/
/backend/bootstrap/cache/
/backend/.vscode/

# Composer
# Keep composer.phar ignored, but track composer.lock to ensure deterministic installs
composer.phar

# OS files
.DS_Store
Thumbs.db

# IDEs
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# Logs
*.log
/backend/storage/logs/

# Sentry / coverage / test
coverage/
phpunit.xml

# Keys and secrets
*.pem
*.key

# Misc
*.swp
*.tmp

# Ignore build outputs from frontend production
/frontend/.cache/

# Keep node_modules and vendor local to subfolders if needed

